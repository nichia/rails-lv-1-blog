<h1>My Blog Posts</h1>

<ol>
<% @posts.each do |post| %>
  <li>
    <!-- Using HTML to generate a link -->
    <!-- Leaset Abstract -->
    <!-- <a href="/posts/<%= post.id %>"><%= post.title %>  -->

    <!-- Using Rails to generate a link -->
    <% # More abstract, using link_to but still hardcoding URL %>
    <%#= link_to(post.title, "/post/#{post.id}" %>
    <% # More abstract, hard coding .id for post %>
    <% #dont need to interpolate with "#{post.title}" nor "/posts/#{post.id}" as in sinatra %>
    <%#= link_to(post.title, post_path(post.id)) %>
    <% # More abstract, not explicitly call id on post %>
    <%= link_to(post.title, post_path(post)) %>
    <% # Most abstract, implicitly calling post_path based on object type or post %>
    <%#= link_to(post.title, post) %>
  </li>
<% end %>
</ol>

